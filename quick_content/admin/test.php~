while (($data = fgetcsv($handle, 1000, ",")) !== FALSE) {
    $num = count($data);
    $row++;
    for ($c=0; $c < $num; $c=$c+2) {
		$arr[] = "../csv/".$data[$c] . ".csv";
        echo $data[$c+1] . "</li><li>";
    }
}
fclose($handle);
?>Ваше слово</li>
