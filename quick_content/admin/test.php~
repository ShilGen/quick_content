<?php 
foreach ($arr as $v) {
	$row = 1;
	$handle = fopen($v, "r");
	while (($data = fgetcsv($handle, 1000, "&")) !== FALSE) {
		$num = count($data);
		$row++;
		for ($c=0; $c < $num; $c++) {echo $data[$c] . "<br />\n";}
		}
	fclose($handle);
}

